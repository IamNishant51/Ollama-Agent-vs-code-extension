{
  "name": "ollama-agent",
  "publisher": "IamNishant51",
  "displayName": "ollama-agent",
  "description": "A Vs-code extension for locally downloaded ollama models to convert them into ai -agent",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Ollama Agent",
      "properties": {
        "ollamaAgent.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host where Ollama is running"
        },
        "ollamaAgent.port": {
          "type": "number",
          "default": 11434,
          "description": "Port for Ollama HTTP API"
        },
        "ollamaAgent.systemPrompt": {
          "type": "string",
          "default": "You are a helpful coding assistant.",
          "description": "System prompt for the assistant"
        },
        "ollamaAgent.provider": {
          "type": "string",
          "enum": ["ollama", "openai", "anthropic", "other"],
          "default": "ollama",
          "description": "Default AI provider to use in the chat panel"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ollamaAgent",
          "title": "Ollama",
          "icon": "media/ollama.svg"
        }
      ]
    },
    "views": {
      "ollamaAgent": [
        {
          "type": "webview",
          "id": "ollamaAgent.chatView",
          "name": "Chat",
          "icon": "media/ollama.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ollamaAgent.chat",
        "title": "Ollama Agent: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ollamaAgent.askSelection",
        "title": "Ollama Agent: Ask About Selection",
        "icon": "$(question)"
      },
      {
        "command": "ollamaAgent.generateCode",
        "title": "Ollama Agent: Generate Code Here",
        "icon": "$(code)"
      }
    ],
  "menus": {
      "commandPalette": [
        { "command": "ollamaAgent.chat", "when": "true" },
        { "command": "ollamaAgent.askSelection", "when": "editorTextFocus" },
        { "command": "ollamaAgent.generateCode", "when": "editorTextFocus" }
      ],
      "commandCenter": [
        { "command": "ollamaAgent.chat", "group": "navigation@10" }
      ],
      "editor/context": [
        {
          "command": "ollamaAgent.askSelection",
          "group": "navigation@99"
        },
        {
          "command": "ollamaAgent.generateCode",
          "group": "navigation@100"
        }
      ],
      "editor/title": [
        { "command": "ollamaAgent.chat", "when": "true", "group": "navigation@10" }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run compile",
    "build:webview": "node ./scripts/build-webview.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "esbuild": "^0.23.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
