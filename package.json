{
  "name": "Ollama-Ai-agent",
  "publisher": "NishantUnavane",
  "displayName": "Ollama Agent - Local AI Coding Assistant",
  "description": "Transform your locally-running Ollama models into an intelligent coding agent. Chat, generate code, edit files, and automate tasks—all running 100% locally with full privacy.",
  "version": "1.0.0",
  "icon": "media/ollama.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/IamNishant51/Ollama-Agent-vs-code-extension"
  },
  "bugs": {
    "url": "https://github.com/IamNishant51/Ollama-Agent-vs-code-extension/issues"
  },
  "homepage": "https://github.com/IamNishant51/Ollama-Agent-vs-code-extension#readme",
  "license": "MIT",
  "keywords": [
    "ollama",
    "ai",
    "agent",
    "coding-assistant",
    "copilot",
    "local-ai",
    "llama",
    "mistral",
    "code-generation",
    "refactoring",
    "chat",
    "privacy"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Ollama Agent",
      "properties": {
        "ollamaAgent.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host where Ollama is running"
        },
        "ollamaAgent.port": {
          "type": "number",
          "default": 11434,
          "description": "Port for Ollama HTTP API"
        },
        "ollamaAgent.systemPrompt": {
          "type": "string",
          "default": "You are a helpful coding assistant.",
          "description": "System prompt for the assistant"
        },
        "ollamaAgent.provider": {
          "type": "string",
          "enum": [
            "ollama",
            "openai",
            "anthropic",
            "google",
            "other"
          ],
          "default": "ollama",
          "description": "Default AI provider to use in the chat panel"
        },
        "ollamaAgent.mode": {
          "type": "string",
          "enum": [
            "read",
            "agent",
            "combine"
          ],
          "default": "read",
          "description": "Read: plan only; Agent: auto-apply edits; Combine: run two models in parallel and merge"
        },
        "ollamaAgent.enableInlineCompletions": {
          "type": "boolean",
          "default": false,
          "description": "Experimental: provide basic inline code completions using the selected model. May be slow."
        },
        "ollamaAgent.enableExplainOnHover": {
          "type": "boolean",
          "default": false,
          "description": "Experimental: show an AI explanation on hover for the symbol under the cursor (short timeout)."
        },
        "ollamaAgent.enableDocstringCompletion": {
          "type": "boolean",
          "default": false,
          "description": "Experimental: suggest AI-generated docstrings when starting a block comment (/**)."
        },
        "ollamaAgent.previewOnFallback": {
          "type": "boolean",
          "default": true,
          "description": "When model returns empty content during Apply, open a diff preview before writing the fallback snippet."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ollamaAgent",
          "title": "Ollama",
          "icon": "media/ollama.svg"
        }
      ]
    },
    "views": {
      "ollamaAgent": [
        {
          "type": "webview",
          "id": "ollamaAgent.chatView",
          "name": "Chat",
          "icon": "media/ollama.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ollamaAgent.chat",
        "title": "Ollama Agent: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ollamaAgent.openReadmeMode",
        "title": "Ollama Agent: README Generator",
        "icon": "$(book)"
      },
      {
        "command": "ollamaAgent.askSelection",
        "title": "Ollama Agent: Ask About Selection",
        "icon": "$(question)"
      },
      {
        "command": "ollamaAgent.generateCode",
        "title": "Ollama Agent: Generate Code Here",
        "icon": "$(code)"
      },
      {
        "command": "ollamaAgent.inlineEdit",
        "title": "Ollama Agent: Edit Selection by Instruction",
        "icon": "$(edit)"
      },
      {
        "command": "ollamaAgent.explainSelection",
        "title": "Ollama Agent: Explain Selection",
        "icon": "$(book)"
      },
      {
        "command": "ollamaAgent.generateTests",
        "title": "Ollama Agent: Generate Unit Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "ollamaAgent.generateCommitMessage",
        "title": "Ollama Agent: Generate Commit Message",
        "icon": "$(git-commit)"
      },
      {
        "command": "ollamaAgent.analyzeProblems",
        "title": "Ollama Agent: Analyze Problems",
        "icon": "$(warning)"
      },
      {
        "command": "ollamaAgent.explainCommand",
        "title": "Ollama Agent: Explain Shell Command",
        "icon": "$(terminal)"
      },
      {
        "command": "ollamaAgent.brush.simplify",
        "title": "Ollama Agent: Brush – Simplify",
        "icon": "$(wand)"
      },
      {
        "command": "ollamaAgent.brush.addTypes",
        "title": "Ollama Agent: Brush – Add Types",
        "icon": "$(symbol-parameter)"
      },
      {
        "command": "ollamaAgent.brush.optimize",
        "title": "Ollama Agent: Brush – Optimize",
        "icon": "$(rocket)"
      },
      {
        "command": "ollamaAgent.indexProject",
        "title": "Ollama Agent: Rebuild Project Index",
        "icon": "$(refresh)"
      },
      {
        "command": "ollamaAgent.showIndexStats",
        "title": "Ollama Agent: Show Index Stats",
        "icon": "$(graph)"
      },
      {
        "command": "ollamaAgent.prSummary",
        "title": "Ollama Agent: PR Summary",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "ollamaAgent.prReviewComments",
        "title": "Ollama Agent: PR Review Comments",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ollamaAgent.addFileHere",
        "title": "Ollama Agent: Add File Here",
        "icon": "$(new-file)"
      },
      {
        "command": "ollamaAgent.addFileAI",
        "title": "Ollama Agent: Add File (AI)",
        "icon": "$(sparkle)"
      },
      {
        "command": "ollamaAgent.extractFunction",
        "title": "Ollama Agent: Extract Function"
      },
      {
        "command": "ollamaAgent.translateSelection",
        "title": "Ollama Agent: Translate Selection"
      },
      {
        "command": "ollamaAgent.generateReadme",
        "title": "Ollama Agent: Generate README"
      },
      {
        "command": "ollamaAgent.fixProblemHere",
        "title": "Ollama Agent: Fix This Problem"
      }
    ],
    "keybindings": [
      {
        "command": "ollamaAgent.chat",
        "key": "ctrl+alt+k",
        "when": "!inputFocus"
      },
      {
        "command": "ollamaAgent.chat",
        "key": "cmd+alt+k",
        "when": "!inputFocus"
      },
      {
        "command": "ollamaAgent.explainSelection",
        "key": "ctrl+alt+e",
        "when": "editorHasSelection && editorTextFocus"
      },
      {
        "command": "ollamaAgent.generateTests",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ollamaAgent.chat",
          "when": "true"
        },
        {
          "command": "ollamaAgent.openReadmeMode",
          "when": "true"
        },
        {
          "command": "ollamaAgent.askSelection",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.generateCode",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.inlineEdit",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.explainSelection",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.generateTests",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.generateCommitMessage",
          "when": "true"
        },
        {
          "command": "ollamaAgent.brush.simplify",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.brush.addTypes",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.brush.optimize",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.indexProject",
          "when": "true"
        },
        {
          "command": "ollamaAgent.showIndexStats",
          "when": "true"
        },
        {
          "command": "ollamaAgent.prSummary",
          "when": "true"
        },
        {
          "command": "ollamaAgent.prReviewComments",
          "when": "true"
        },
        {
          "command": "ollamaAgent.analyzeProblems",
          "when": "editorTextFocus"
        },
        {
          "command": "ollamaAgent.explainCommand",
          "when": "true"
        },
        {
          "command": "ollamaAgent.addFileHere",
          "when": "true"
        },
        {
          "command": "ollamaAgent.addFileAI",
          "when": "true"
        },
        {
          "command": "ollamaAgent.extractFunction",
          "when": "editorHasSelection"
        },
        {
          "command": "ollamaAgent.translateSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "ollamaAgent.generateReadme",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "commandCenter": [
        {
          "command": "ollamaAgent.chat",
          "group": "navigation@10"
        }
      ],
      "editor/context": [
        {
          "command": "ollamaAgent.askSelection",
          "group": "navigation@99"
        },
        {
          "command": "ollamaAgent.generateCode",
          "group": "navigation@100"
        },
        {
          "command": "ollamaAgent.inlineEdit",
          "group": "navigation@101"
        },
        {
          "command": "ollamaAgent.explainSelection",
          "group": "navigation@102"
        },
        {
          "command": "ollamaAgent.brush.simplify",
          "group": "navigation@103"
        },
        {
          "command": "ollamaAgent.brush.addTypes",
          "group": "navigation@104"
        },
        {
          "command": "ollamaAgent.brush.optimize",
          "group": "navigation@105"
        },
        {
          "command": "ollamaAgent.addFileHere",
          "group": "navigation@110"
        },
        {
          "command": "ollamaAgent.addFileAI",
          "group": "navigation@111"
        },
        {
          "command": "ollamaAgent.extractFunction",
          "group": "2_code@20"
        },
        {
          "command": "ollamaAgent.translateSelection",
          "group": "2_code@21"
        }
      ],
      "editor/title": [
        {
          "command": "ollamaAgent.chat",
          "when": "true",
          "group": "navigation@10"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run compile",
    "build:webview": "node ./scripts/build-webview.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.23.1",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
